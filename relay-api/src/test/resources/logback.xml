<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="io.netty.handler.pcap.PcapWriteHandler" level="info"/>
    <logger name="io.micronaut.benchmark.relay" level="debug"/>
</configuration>


